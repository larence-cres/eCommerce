<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LaunchScreenTheme" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@drawable/launcher_screen_background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>

        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="android:alertDialogStyle">@style/MyAlertDialogStyle</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedSquare">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Text appearance -->
    <style name="Title">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DescriptionBold">
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemTitle">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemTitleSmall">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemSubtitleSmall">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="EditText">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_regular</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
<!--        <item name="android:windowTitleStyle">@style/MyAlertDialogTitle</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
<!--        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>-->
        <!-- If you don't want your own button bar style use
                @android:style/Holo.Light.ButtonBar.AlertDialog
                and
                ?android:attr/borderlessButtonStyle
             instead of @style/MyButtonBar and @style/MyBorderlessButton -->
<!--        <item name="android:buttonBarStyle">@style/MyButtonBar</item>-->
<!--        <item name="android:buttonBarButtonStyle">@style/MyBorderlessButton</item>-->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Define background colors of title, message, buttons, etc. here -->
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>
